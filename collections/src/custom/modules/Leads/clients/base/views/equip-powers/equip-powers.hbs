<div class="record-panel flex-list-view left-actions scroll-width">
    <div class="row-fluid record-panel-header panel-active"><h4>Powers and Equipment</h4></div>
    <table class="table table-striped dataTable">
        <thead>
        <tr>
            {{!-- empty header row for icon --}}
            <th></th>
            {{#each headerFields}}
                <th>{{str label ../module}}</th>
            {{/each}}
        </tr>
        </thead>
        <tbody>
        {{#each collection.models}}
            {{!-- model --}}
            <tr name="{{module}}_{{cid}}" class="quote-data-group-list product-row not-sortable">
                <td>
                    {{#if _image}}
                        <img src="{{_image}}" style="max-height: 32px;max-width: 32px;"/>
                    {{else}}
                        <div class="label label-module label-{{module}}" title="{{moduleIconToolTip module}}">
                            {{moduleIconLabel module}}
                        </div>
                    {{/if}}
                </td>
                {{#each fields}}
                {{!-- field def --}}
                    {{#has name ../../meta.fields}}
                        <td>
                            {{field ../../../this model=../../this template="list"}}
                        </td>
                    {{/has}}
                {{/each}}
                <td></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
